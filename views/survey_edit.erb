<h2>Edit Survey: <i><b><%= @my_survey.description %></b></i></h2>

<form action='/surveys/<%=@id%>' method='post'>
  <input name='_method' type="hidden" value='patch'>
  <label for='description'>Change Survey Name</label>
  <input id='description' name='description' type='text'>
  <button type='submit'>Change</button>
</form>

<form action='/surveys/<%= @id %>' method='post'>
  <label for='content'>Question</label>
  <input id='content' name='content' type='text'>
  <button type='submit'>Add Question</button>
</form>

<% if @my_survey.questions.any? %>
  <ul>
    <p>The following questions have been added to your survey.</p>
    <% @my_survey.questions.each do |question|%>
      <li>
        <a href="/questions/<%=question.id()%>"><%= question.content() %></a>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no questions for this Survey yet.</p>
<% end %>


<form action="/surveys/<%= @my_survey.id()%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Survey</button>
</form>
