<h2>Edit Answer: <i><b><%= @my_answer.content %></b></i></h2>

<form action='/answers/<%=@id%>' method='post'>
  <input name='_method' type="hidden" value='patch'>
  <label for='content'>Change Answer Name</label>
  <input id='content' name='content' type='text'>
  <button type='submit' class='btn-warning'>Change</button>
</form>


<form action="/answers/<%=@id%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class='btn-danger'>Delete Answer</button>
</form>
